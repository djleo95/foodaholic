<div class="row">
  <div class="col-sm-2">
    <% if comment.user.avatar.present? %>
      <%= image_tag comment.user.avatar.url %>
    <% else %>
      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR_1bwe0IbYe1xFI9hFHGYNdGympuSt-CqSdYkzK-6jLQBST2O4"
        style="width: 100%" alt="">
    <% end %>
  </div>

  <div class="col-sm-10 pl-0">
    <div class="text-left">
      <%= link_to comment.user.email, user_path(comment.user) %>
      <%= time_ago_in_words comment.created_at %>
    </div>
    <div class="text-left"><%= comment.content %></div>
  </div>
</div>
<hr>
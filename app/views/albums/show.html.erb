<% @album.images.each do |p| %>
  <%= image_tag p.image_url, style: "max-width: 200px; max-height: 200px" %>
  <% if current_user.id == @album.user.id %>
    <%= link_to "Destroy Image", image_path(p), method: :delete %>
  <% end %>
<% end %>

<% if current_user.id == @album.user.id %>
  <%= link_to "Destroy Album", album_path(@album), method: :delete %>
<% end %>


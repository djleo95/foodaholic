<div>
    <div class="container">
        <% @albums.each do |album| %>
            <div class="album-container">
                <p style="font-size: 3em"><%= album.title %></p>
                <% album.images.each do |image| %>
                    <%= render "image", image: image %>
                <% end %>
            </div>
            <hr>
        <% end %>
    </div>


#Search

    <%= form_tag root_path, method: :get do %>
      <%= text_field_tag :q, nil %>
    <% end %> 
    
    <%= render 'user' %>
    <%= render 'album' %>
</div>

<hr>

<div>
    <div class="card w-50">
        <% @albums.each do |album| %>
            <% album.images.each do |image| %>
                <!-- image -->
                <div class="view overlay">
                    <p class="card-img-top"><%= image_tag image.image_url, class: 'image-item' %></p>
                    <div class="mask rgba-white-slight">
                    </div>
                </div>
                <div class="card-body">
                <!-- title -->
                <p style="font-size: 3em",class="card-title"><%= album.title%></p>
                <%= render "image", image: image %>
            <% end %>
        <hr>
        <% end %>
    </div>


#Search

    <%= form_tag root_path, method: :get do %>
      <%= text_field_tag :q, nil %>
    <% end %> 
    
    <%= render 'user' %>
    <%= render 'album' %>
</div>

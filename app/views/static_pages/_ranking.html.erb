<h1>Ranking</h1>
<table border="1px">
    <tr>
        <th>Like</th>
        <th>Comment</th>
        <th>Share</th>
        <th>Image</th>
    </tr>
    <% @ranking.each do |ranking|%>
    <tr>
        <td><%= ranking.like_count %></td>
        <td><%= ranking.comment_count %></td>
        <td><%= ranking.share_count %></td>
        <td><%=  image_tag ranking.image_url, style:"width:150px" %></td>
    </tr>
    <% end %>
</table>
<br>


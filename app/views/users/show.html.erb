<%= @user.email %>
<% if @user == current_user %>



<div class="card">
    <h3 class="card-header warning-color-dark white-text">ニュースフィード</h3>
    <div class="card-body">
        <% @albums.each do |album| %>
            <div class="album-container">
                <p style="font-size: 3em"><%= album.title %></p>
                <% album.images.each do |image| %>
                    <%= render "static_pages/image", image: image %>
                <% end %>
            </div>
            <hr>
        <% end %>
    </div>
</div>
    <br>
<% else %>
    <% if @user.friends.ids.include?(current_user.id) %>
        <%= link_to "Unfriend", friend_path(@user.id), method: :delete  %>
    <% else %>
        <%= form_for :friend, url: friends_path do |f| %>
            <%= f.hidden_field :friend_id, value: @user.id %>
            
            <%= f.submit "Add Friend" %>
        <% end %>
    <% end %>
<% end %>

<% @shares.each do |share| %>
    <p>Shared by <%= share.user.email %></p>
    <p><%= image_tag share.get_shared_object.image_url %></p>
<% end %>
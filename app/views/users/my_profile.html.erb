<!-- Card -->
<div class="card card-cascade wider reverse my-4">

  <!-- Card image -->
  <div class="view view-cascade overlay">
        <% if current_user.avatar.url.present? %>
            <%= image_tag current_user.avatar.url, class: "card-img-top" %>
            <!--<div class="mask rgba-white-slight"></div>-->
        <% end %>
  </div>

  <!-- Card content -->
  
  <div class="card-body card-body-cascade text-center">

    <!-- name -->
    <h4 class="card-title"><strong>Name:<%= current_user.name %></strong></h4>
    <!-- Email -->
    <h6 class="font-weight-bold indigo-text py-2">Email: <%= current_user.email %></h6>
    <!-- Birthday -->
    <h6 class="font-weight-bold indigo-text py-2">Birthday:
    <% if current_user.birthday.present? %>
        <%= current_user.birthday %>
    <% else%>
        Unknown
    <% end %></h6>
    <!-- From -->
        <h6 class="font-weight-bold indigo-text py-2">From:
    <% if current_user.from.present? %>
        <%= current_user.from %>
    <% else%>
        Unknown
    <% end %></h6>
    <!-- Life story -->
        <h6 class="font-weight-bold indigo-text py-2">LifeStory:
    <% if current_user.life_story.present? %>
        <%= current_user.life_story %>
    <% else%>
        Unknown
    <% end %></h6>
    <!-- Phone -->
        <h6 class="font-weight-bold indigo-text py-2">Phone:
    <% if current_user.phone.present? %>
        <%= current_user.phone %>
    <% else%>
        Unknown
    <% end %></h6>
  </div>

</div>
